{
  "ConnectionStrings": {
    "ProductionBase": "user-secrets:ConnectionStrings:ProductionBase",
    "DevConnection": "Server=(localdb)\\mssqllocaldb;Database=applicationdb;Trusted_Connection=True;"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "JWT": {
    "ValidAudience": "http://localhost:4200",
    "ValidIssuer": "http://localhost:5000",
    "Secret": "user-secrets:JWT:Secret",
    "TokenValidityInMinutes": 1000,
    "RefreshTokenValidityInDays": 7
  }
}
